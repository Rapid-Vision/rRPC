{
  "openapi": "3.0.0",
  "info": {
    "title": "rRPC API",
    "version": "0.1.0"
  },
  "paths": {
    "/rpc/submit_text": {
      "post": {
        "operationId": "SubmitText",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SubmitTextParams"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SubmitTextResult"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RPCError"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RPCError"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RPCError"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RPCError"
                }
              }
            }
          },
          "501": {
            "description": "Not Implemented",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RPCError"
                }
              }
            }
          }
        }
      }
    },
    "/rpc/compute_stats": {
      "post": {
        "operationId": "ComputeStats",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ComputeStatsParams"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ComputeStatsResult"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RPCError"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RPCError"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RPCError"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RPCError"
                }
              }
            }
          },
          "501": {
            "description": "Not Implemented",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RPCError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "TextModel": {
        "type": "object",
        "properties": {
          "title": {"nullable":true,"type":"string"},
          "data": {"type":"string"}
        },
        "required": ["data"]
      },
      "SliceModel": {
        "type": "object",
        "properties": {
          "begin": {"format":"int32","type":"integer"},
          "end": {"format":"int32","type":"integer"}
        },
        "required": ["begin","end"]
      },
      "StatsModel": {
        "type": "object",
        "properties": {
          "ascii": {"type":"boolean"},
          "word_count": {"additionalProperties":{"format":"int32","type":"integer"},"type":"object"},
          "total_words": {"format":"int32","type":"integer"},
          "sentences": {"items":{"$ref":"#/components/schemas/SliceModel"},"type":"array"}
        },
        "required": ["ascii","word_count","total_words","sentences"]
      },
      "SubmitTextParams": {
        "type": "object",
        "properties": {
          "text": {"$ref":"#/components/schemas/TextModel"}
        },
        "required": ["text"]
      },
      "SubmitTextResult": {
        "type": "object",
        "properties": {
          "int": {"format":"int32","type":"integer"}
        }
      },
      "ComputeStatsParams": {
        "type": "object",
        "properties": {
          "text_id": {"format":"int32","type":"integer"}
        },
        "required": ["text_id"]
      },
      "ComputeStatsResult": {
        "type": "object",
        "properties": {
          "stats": {"$ref":"#/components/schemas/StatsModel"}
        }
      }
      ,
      "RPCError": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "custom",
              "validation",
              "input",
              "unauthorized",
              "forbidden",
              "not_implemented"
            ]
          },
          "message": {
            "type": "string"
          }
        },
        "required": ["type", "message"]
      }
    }
  }
}
